

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
<%= f.error_notification %>
<h2 class="text-center">Resend confirmation instructions</h2>
<%= f.full_error :confirmation_token %>

<%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control"} %>

<%= f.button :submit, "Resend confirmation", class: "btn btn-primary btn-block"  %>
<% end %>

<%= render "devise/shared/links" %>
