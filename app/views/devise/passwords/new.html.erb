

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
<%= f.error_notification %>
<h2 class="text-center">Forgot password?</h2>
<%= f.input :email, required: true, autofocus: true, label: false, input_html: {class: "form-control"} %>

<%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block" %>
<%= render "devise/shared/links" %>
<% end %>


