

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>
<%= f.error_notification %>
<h2 class="text-center">Change your password</h2>
<%= f.input :reset_password_token, as: :hidden %>
<%= f.full_error :reset_password_token %>

<%= f.input :password, label: false, label: false, placeholder: "New password", required: true, autofocus: true, input_html: {class: "form-control"} %>
<%= f.input :password_confirmation, label: false, placeholder: "Re-type password", required: true, input_html: {class: "form-control"} %>

<%= f.button :submit, "Change my password", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
